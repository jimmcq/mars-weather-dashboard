{
  "name": "mars-weather-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "ðŸš€ Real-time Mars weather dashboard with planetary time calculations using NASA's Mars24 algorithm. Built with Next.js 15, TypeScript, and Tailwind CSS.",
  "keywords": [
    "mars",
    "weather",
    "nasa",
    "space",
    "planetary-science",
    "nextjs",
    "typescript",
    "real-time",
    "dashboard",
    "portfolio"
  ],
  "author": {
    "name": "Jim McQuillan",
    "email": "jim@jimmcq.com",
    "url": "https://github.com/jimmcq"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmcq/mars-weather-dashboard"
  },
  "bugs": {
    "url": "https://github.com/jimmcq/mars-weather-dashboard/issues"
  },
  "homepage": "https://github.com/jimmcq/mars-weather-dashboard#readme",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:ci": "NODE_OPTIONS='--max-old-space-size=2048' CI=true NODE_ENV=production next build",
    "start": "next start",
    "start:lighthouse": "node scripts/start-for-lighthouse.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:clean": "NODE_ENV=test jest --silent 2>/dev/null || NODE_ENV=test jest --silent",
    "test:watch": "NODE_OPTIONS='--no-deprecation' NODE_ENV=test jest --watch",
    "test:ci": "NODE_OPTIONS='--no-deprecation' NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:verbose": "NODE_OPTIONS='--no-deprecation' NODE_ENV=test jest",
    "type-check": "tsc --noEmit",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'yarn type-check'",
      "bash -c 'yarn test:ci --bail --passWithNoTests'"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/nextjs": "^10.7.0",
    "@sentry/react": "^10.7.0",
    "@tanstack/react-query": "^5.85.5",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-is": "^19.1.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.1.0",
    "jest-environment-jsdom": "^30.1.0",
    "lint-staged": "^16.1.5",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
