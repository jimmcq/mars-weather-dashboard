{
  "ci": {
    "collect": {
      "startServerCommand": "yarn run start:lighthouse",
      "startServerReadyPattern": "ready|listen|Local:",
      "url": ["http://localhost:3000"],
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": ["info", { "minScore": 0.85 }],
        "categories:accessibility": ["info", { "minScore": 0.85 }],
        "categories:best-practices": ["info", { "minScore": 0.9 }],
        "categories:seo": ["info", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
